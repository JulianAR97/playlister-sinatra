<h2>Edit <%=@song.name%></h2>

<form action="/songs/<%=@song.slug%>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <h4>
        Artist: <input type="text" name="artist" id="Artist Name" value="<%=@song.artist.name%>">
    </h4>
    <h4>Genres</h4>
    <%Genre.all.each do |genre| %>
        <%=genre.name%> <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre)%>>
    <% end %>
    <br><br>
    <input type="submit" value="Save">
</form>
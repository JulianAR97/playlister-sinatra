<h2>Create a New Song</h2>

<form action="/songs" method="post">
    <h4>
        Name: <input type="text" name="name" id="Name">
    </h4>
    <h4>
        Artist: <input type="text" name="artist" id="Artist Name">
    </h4>
    <h4>Genres</h4>
    <%Genre.all.each do |genre| %>
        <%=genre.name%> <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>">
    <% end %>
    <br><br>
    <input type="submit" value="Create">
</form>